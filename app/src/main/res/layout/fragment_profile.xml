<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragement.ProfileFragement">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/gradientbackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/scale_100dp"
                android:layout_height="@dimen/scale_100dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/profile"
                android:layout_marginTop="@dimen/scale_50dp"
                android:layout_marginStart="10dp"
                android:elevation="1dp"
                android:src="@drawable/user">

            </de.hdodenhof.circleimageview.CircleImageView>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="400dp"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="350dp"
                    android:layout_height="280dp"
                    android:layout_centerHorizontal="true"

                    android:layout_marginTop="100dp"
                    app:cardCornerRadius="10dp">


                    <TextView
                        android:id="@+id/lUserName_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="130dp"
                        android:layout_marginTop="@dimen/scale_60dp"
                        android:text="User Name"
                        android:textColor="@color/colorBlack"
                        android:textSize="20dp"></TextView>


                    <TextView
                        android:id="@+id/lUserWebsite_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="150dp"
                        android:layout_marginLeft="120dp"
                        android:layout_marginTop="@dimen/scale_90dp"
                        android:text="Website"
                        android:textColor="@color/colorGrey"></TextView>


                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/scale_20dp"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/scale_120dp">

                        <TextView
                            android:id="@+id/postnum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="10dp"
                            android:text="0"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/scale_20dp"></TextView>

                        <TextView
                            android:id="@+id/posttext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:text="Posts"
                            android:textColor="@color/colorBlack"></TextView>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/scale_110dp"
                        android:paddingTop="@dimen/scale_120dp">

                        <TextView
                            android:id="@+id/followernum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="@dimen/scale_10dp"
                            android:text="0"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/scale_20dp"></TextView>

                        <TextView
                            android:id="@+id/followertext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/scale_30dp"
                            android:text="Followers"
                            android:textColor="@color/colorBlack"></TextView>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/scale_120dp"
                        android:orientation="vertical"
                        android:paddingLeft="220dp">

                        <TextView
                            android:id="@+id/followingnum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="@dimen/scale_10dp"
                            android:text="0"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/scale_20dp"></TextView>

                        <TextView
                            android:id="@+id/followingtext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/scale_30dp"
                            android:text="Following"
                            android:textColor="@color/colorBlack"></TextView>
                    </LinearLayout>




                    <Button
                        android:layout_width="@dimen/scale_200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/scale_80dp"
                        android:layout_marginTop="@dimen/scale_190dp"
                        android:text="Edit Profile"
                        android:id="@+id/btnedit"
                        style="@style/AppTheme.Button"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="5"

                        />


                </com.google.android.material.card.MaterialCardView>




            </LinearLayout>



            <com.google.android.material.card.MaterialCardView
                android:layout_height="250dp"
                android:layout_width="350dp"
                android:layout_marginTop="420dp"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="@dimen/scale_10dp"
                android:backgroundTint="@color/colorWhite"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/scale_20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:textSize="@dimen/scale_20dp"
                    android:textColor="@color/colorBlack"
                    android:id="@+id/post"
                    android:text="Posts"></TextView>

            </com.google.android.material.card.MaterialCardView>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>
</RelativeLayout>