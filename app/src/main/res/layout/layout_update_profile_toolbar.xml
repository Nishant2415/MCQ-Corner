<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/lUpdateProfile_imgClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:contentDescription="Toolbar navigation icon"
            android:padding="@dimen/scale_5dp"
            android:src="@drawable/ic_close" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Edit Profile"
            android:layout_marginStart="@dimen/scale_10dp"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_20sp" />

        <Button
            android:id="@+id/lUpdateProfile_btnUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="@dimen/scale_10dp"
            android:text="Update"
            app:backgroundTint="@color/colorAccent" />

    </LinearLayout>

</androidx.appcompat.widget.Toolbar>